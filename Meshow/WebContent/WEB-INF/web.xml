<?xml version="1.0" encoding="UTF-8"?>  
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">  
    <servlet>  
        <servlet-name>LoginServlet</servlet-name>  
        <servlet-class>demo.servlet.LoginServlet</servlet-class>  
    </servlet>
    <servlet>  
        <servlet-name>login</servlet-name>  
        <servlet-class>demo.servlet.login</servlet-class>  
    </servlet>
     <servlet>  
        <servlet-name>desktop</servlet-name>  
        <servlet-class>demo.servlet.desktop</servlet-class>  
    </servlet> 
    <servlet-mapping>  
        <servlet-name>LoginServlet</servlet-name>  
        <url-pattern>/LoginServlet</url-pattern>  
    </servlet-mapping>
    <servlet-mapping>  
        <servlet-name>login</servlet-name>  
        <url-pattern>/login/wml</url-pattern>  
    </servlet-mapping>
     <servlet-mapping>  
        <servlet-name>desktop</servlet-name>  
        <url-pattern>/backstage/desktop</url-pattern>  
    </servlet-mapping>   
    <welcome-file-list>
    	<welcome-file>login_success.html</welcome-file>   
    </welcome-file-list>  
</web-app> 
